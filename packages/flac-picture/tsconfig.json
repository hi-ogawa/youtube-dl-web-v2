{
  "extends": "@tsconfig/strictest",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "build/tsc",
    "declaration": true,
    "declarationMap": true,
    "checkJs": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "types": ["@types/node"]
  }
}
