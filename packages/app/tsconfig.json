{
  "extends": "@tsconfig/strictest",
  "include": ["src", "e2e"],
  "compilerOptions": {
    "exactOptionalPropertyTypes": false, // too strict
    "noUncheckedIndexedAccess": false, // too strict
    "checkJs": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2021",
    "lib": ["es2021", "dom", "WebWorker.ImportScripts"],
    "types": ["vite/client", "@hiogawa/vite-glob-routes/virtual"],
    "jsx": "react-jsx"
  }
}
