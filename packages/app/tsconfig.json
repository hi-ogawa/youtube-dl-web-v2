{
  "extends": "@tsconfig/strictest",
  "include": ["src", "e2e"],
  "compilerOptions": {
    "exactOptionalPropertyTypes": false, // too strict
    "noUncheckedIndexedAccess": false, // too strict
    "checkJs": false,
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "WebWorker.ImportScripts"],
    "types": ["vite/client"],
    "jsx": "react-jsx"
  }
}
