{
  "extends": "@tsconfig/strictest",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "build/tsc",
    "declaration": true,
    "exactOptionalPropertyTypes": false, // too strict
    "noUncheckedIndexedAccess": false, // too strict
    "checkJs": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2021",
    "lib": ["es2021"],
    "types": ["@types/node"]
  }
}
